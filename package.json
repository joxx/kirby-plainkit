{
  "name": "kirby-starter",
  "version": "1.0.0",
  "description": "Simple Kirby starter, watch and compile your Sass.",
  "main": "index.js",
  "scripts": {
    "start": "npm-run-all --parallel watch:*",
    "build": "npm-run-all --parallel build:*",
    "watch:rollup": "rollup -c -w",
    "watch:sass": "sass --source-map -w --style=expanded src/css:public/css",
    "build:rollup": "rollup -c",
    "build:sass": "sass --style=compressed --no-source-map src/css:public/css",
    "rollup:help": "rollup --help"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joxx/kirby-plainkit"
  },
  "keywords": [
    "Kirby",
    "Sass",
    "JavaScript"
  ],
  "author": "Joachim Kliemann",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/joxx/kirby-plainkit/issues"
  },
  "homepage": "https://github.com/joxx/kirby-plainkit#readme",
  "devDependencies": {
    "@rollup/plugin-terser": "^0.4.3",
    "chokidar-cli": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "recursive-fs": "^2.1.0",
    "rollup": "^3.26.3",
    "sass": "^1.63.6",
    "stylelint": "^15.10.3",
    "stylelint-config-prettier-scss": "^1.0.0",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-config-standard-scss": "^10.0.0"
  }
}
